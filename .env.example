# =============================================================================
# SENDELL CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# =============================================================================
# OpenAI API Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Primary model for reasoning and complex tasks
OPENAI_MODEL=gpt-4-turbo-preview

# Fallback model for simple tasks (saves costs)
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Max tokens for responses
OPENAI_MAX_TOKENS=2000

# Temperature (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Sendell Agent Configuration
# =============================================================================
# Autonomy level: 1-5
# L1 = Monitor Only (no actions)
# L2 = Ask Permission (default, safest)
# L3 = Safe Actions (auto-execute safe operations)
# L4 = Modify State (can close apps, move files)
# L5 = Full Autonomy (expert mode, use with caution)
SENDELL_AUTONOMY_LEVEL=2

# Proactive loop interval in seconds (how often agent checks system)
# Recommended: 60 (1 minute) for balance of responsiveness and API costs
SENDELL_LOOP_INTERVAL=60

# Enable proactive monitoring (true/false)
SENDELL_PROACTIVE_MODE=true

# =============================================================================
# Privacy & Security
# =============================================================================
# Apps to NEVER monitor (comma-separated, case-insensitive)
# Example: password manager, banking apps, etc.
SENDELL_BLOCKED_APPS=1password,keepass,bitwarden,lastpass,banking,chase,bankofamerica

# Window titles to block (comma-separated, partial matches)
# Example: windows containing "password", "bank", etc.
SENDELL_BLOCKED_WINDOWS=password,bank,credit card,ssn,tax

# Scrub PII from logs (emails, phones, credit cards)
SENDELL_SCRUB_PII=true

# Encrypt sensitive data at rest
SENDELL_ENCRYPT_DATA=true

# =============================================================================
# Logging & Observability
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
SENDELL_LOG_LEVEL=INFO

# Log file path (relative to project root)
SENDELL_LOG_FILE=logs/sendell.log

# Max log file size in MB before rotation
SENDELL_LOG_MAX_SIZE=10

# Number of backup log files to keep
SENDELL_LOG_BACKUP_COUNT=5

# =============================================================================
# LangSmith (Optional - for tracing and debugging)
# =============================================================================
# Enable LangSmith tracing (true/false)
LANGCHAIN_TRACING_V2=false

# Get API key from: https://smith.langchain.com/
LANGCHAIN_API_KEY=

# Project name in LangSmith
LANGCHAIN_PROJECT=sendell

# =============================================================================
# Memory & Storage
# =============================================================================
# Memory backend: sqlite (v0.1), postgres (v0.2+)
SENDELL_MEMORY_BACKEND=sqlite

# SQLite database path (for v0.1)
SENDELL_DB_PATH=data/sendell.db

# PostgreSQL connection (for future v0.2+)
# SENDELL_POSTGRES_HOST=localhost
# SENDELL_POSTGRES_PORT=5432
# SENDELL_POSTGRES_DB=sendell
# SENDELL_POSTGRES_USER=sendell
# SENDELL_POSTGRES_PASSWORD=

# Vector store for RAG: chroma, pinecone
SENDELL_VECTOR_STORE=chroma

# Chroma persist directory
SENDELL_CHROMA_PATH=data/chroma

# Pinecone (optional, for production)
# SENDELL_PINECONE_API_KEY=
# SENDELL_PINECONE_ENVIRONMENT=
# SENDELL_PINECONE_INDEX=sendell

# =============================================================================
# System Monitoring Thresholds
# =============================================================================
# Alert when CPU exceeds this percentage
SENDELL_CPU_THRESHOLD=80

# Alert when RAM exceeds this percentage
SENDELL_RAM_THRESHOLD=85

# Alert when disk exceeds this percentage
SENDELL_DISK_THRESHOLD=90

# Alert when process exceeds this RAM in MB
SENDELL_PROCESS_RAM_THRESHOLD=2000

# =============================================================================
# Advanced Settings (DO NOT CHANGE unless you know what you're doing)
# =============================================================================
# API request timeout in seconds
SENDELL_API_TIMEOUT=30

# Max retries for failed API calls
SENDELL_MAX_RETRIES=3

# Enable debug mode (verbose logging)
SENDELL_DEBUG=false

# Disable telemetry (we don't collect telemetry by default anyway)
SENDELL_DISABLE_TELEMETRY=true
